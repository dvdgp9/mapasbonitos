# ===========================================
# MAPAS BONITOS - Configuration
# ===========================================
# Copy this file to private/.env and fill in your values
# NEVER commit the actual .env file to git!

# Database Configuration
DB_HOST=localhost
DB_NAME=dvdgp_mapas
DB_USER=dvdgp_mapas_usr
DB_PASS=your_password_here
DB_CHARSET=utf8mb4

# Application Settings
APP_URL=https://mapas.iaiapro.com
APP_ENV=production
APP_DEBUG=false

# Storage paths (relative to project root)
STORAGE_PATH=storage/renders
THEMES_PATH=maptoposter-main/themes
FONTS_PATH=maptoposter-main/fonts

# Rate Limiting
RATE_LIMIT_MAX_JOBS=5
RATE_LIMIT_WINDOW_HOURS=1

# Worker Settings
WORKER_POLL_INTERVAL=2
WORKER_MAX_CONSECUTIVE_ERRORS=5

# Geocoding Cache TTL (seconds) - 30 days default
GEOCODE_CACHE_TTL=2592000
